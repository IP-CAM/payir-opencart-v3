{{ header }}{{ column_left }}

<div id="content">
    <div class="page-header">
       <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-payir" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                    <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
                <h1>{{ heading_title }}</h1>
                <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
                </ul>
        </div>
  </div>
  <div class="container-fluid"> {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
        </div>
        
        

         <div class="panel-body">
        <form id="form-payir" method="post" enctype="multipart/form-data" action="{{ action }}" class="form-horizontal">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
            <li><a href="#tab-additional" data-toggle="tab">{{ tab_additional }}</a></li>
          </ul>

          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-api">{{ entry_api }}</label>
                <div class="col-sm-10">
                  <input name="payment_payir_api" id="payment_payir_api" type="text" value="{{ payment_payir_api }}" class="form-control" style="direction:ltr;" />
                  {% if error_api %}
                  <div class="text-danger">{{ error_api }}</div>
                  {% endif %}
                            

                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_payir_order_status_id" id="payment_payir_order_status_id" class="form-control">
                    
                    {% for order_status in order_statuses %}
                    
                    {% if order_status['order_status_id'] == payment_payir_order_status_id %}
                    
                    <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                    
                    {% else %}
                    
                    <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>

                    {% endif %}                    
                    
                    {% endfor %}

                </select>
                </div>
              </div>

              

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_payir_status" id="payment_payir_status" class="form-control">
                    
                    {% if payment_payir_status %}

                    <option value="1" selected="selected">{{ text_enabled }}</option>

                    <option value="0">{{ text_disabled }}</option>

                    {% else %}

                    <option value="1">{{ text_enabled }}</option>

                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}

                  </select>
                </div>
              </div>


              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                <div class="col-sm-10">
                  <input name="payment_payir_sort_order" id="payment_payir_sort_order" type="text" value="{{ payment_payir_sort_order }}" class="form-control" />
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-additional">
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="payment_payir_send">{{ entry_send }}</label>
                <div class="col-sm-10">
                  <input name="payment_payir_send" id="payment_payir_send" type="text" value="{{ payment_payir_send }}" class="form-control" style="direction:ltr;" />
                  
                  {% if error_send %}

                  <div class="text-danger">{{ error_send }}</div>
                  
                  {% endif %}

                </div>
              </div>

              <div class="form-group required">
                <label class="col-sm-2 control-label" for="payment_payir_verify">{{ entry_verify }}</label>
                <div class="col-sm-10">
                  <input name="payment_payir_verify" type="text" value="{{ payment_payir_verify }}" class="form-control" style="direction:ltr;" />
                  
                  {% if error_verify %}
                  
                  <div class="text-danger">{{ error_verify }}</div>
                  
                  {% endif %}
                
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="payment_payir_gateway">{{ entry_gateway }}</label>
                <div class="col-sm-10">
                  <input name="payment_payir_gateway" id="payment_payir_gateway" type="text" value="{{ payment_payir_gateway }}" class="form-control" style="direction:ltr;" />
                  {% if error_gateway %}
                  <div class="text-danger">{{ error_gateway }}</div>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }} 